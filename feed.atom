---
layout: none
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
{% if site.url %}
    {% assign base = site.url %}
{% elsif site.github.url %}
    {% assign base = site.github.url %}
{% endif %}
    <title>{{ site.name }}</title>
    <link href="{{ base }}/feed.atom" rel="self"/>
    <link href="{{ base }}/"/>
    <updated>{{ site.time | date_to_xmlschema }}</updated>
    <id>{{ base }}/</id>
    <author>
        <name>{{ site.data.people[page.author].name }}</name>
        {% if site.data.people[page.author].mail != "" %}<email>{{ site.data.people[page.author].mail }}</email>{% endif %}
    </author>

    {% for post in site.posts %}
    <entry>
        <title>{{ post.title | xml_escape }}</title>
        <link href="{{ base }}{{ post.url }}"/>
        <updated>{{ post.date | date_to_xmlschema }}</updated>
        <id>{{ base }}{{ post.id }}</id>
        <content type="html">{{ post.content | xml_escape }}</content>
    </entry>
    {% endfor %}
</feed>
